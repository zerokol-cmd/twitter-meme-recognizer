{
  "manifest_version": 3,
  "name": "Telegram Message Analyzer",
  "version": "1.0",
  "description": "Analyzes images in Telegram messages and sends them to classification server",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://web.telegram.org/a/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.telegram.org/a/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Telegram Message Analyzer"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://web.telegram.org/*"]
    }
  ]
}
